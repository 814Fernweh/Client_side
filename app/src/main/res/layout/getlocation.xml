<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <!--头部内容-->
    <RelativeLayout
        android:id="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008cc9">
        <!--    wrap_content刚好包含里面的内容  text是显示给用户的文字内容-->
        <TextView
            android:id="@+id/Main_tvLocationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="get location!"
            android:textColor="#fff"
            android:textSize="30sp" />
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="9dp"-->

    </RelativeLayout>



    <!--得到位置 展示-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/Main_btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to get location"
            android:background="#008cc9"/>

    </RelativeLayout>


    <!--点击按钮 开始拍照-->

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take photo"
        />
    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/></RelativeLayout>



</LinearLayout>
